<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="54dp"
        android:background="@drawable/room_toolbar_shape"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/mic_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/mic_mute_selector" />

        <ImageView
            android:id="@+id/video_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="36dp"
            android:src="@drawable/video_mute_selector" />

        <CheckBox
            android:id="@+id/hangUpBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            android:checked="true"
            android:layout_marginLeft="32dp"
            android:background="@drawable/selector_live_room_switch" />

        <ImageView
            android:id="@+id/switch_camera_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="36dp"
            android:src="@drawable/camera_switch_selector" />

        <RelativeLayout
            android:id="@+id/user_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp">

            <ImageView
                android:id="@+id/user_ic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/user_ic" />

            <TextView
                android:id="@+id/user_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/user_ic"
                android:textColor="@color/rtc_demo_red"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
